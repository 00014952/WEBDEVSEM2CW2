<% layout('./boilerplate') %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form action="/jobs" method="POST" class="validated-form form" novalidate>
        <div class="mb-3">
          <div class="form-group">
            <label class="form-label" for="title">Job Title</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="job[title]"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="desc">Job Description</label>
            <input
              class="form-control"
              type="text"
              id="desc"
              name="job[desc]"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="loc">Job Location</label>
            <input
              class="form-control"
              type="text"
              id="loc"
              name="job[loc]"
              required
            />
          </div>
        </div>

        <div class="mb-3">
          <button class="btn btn-success">Add Job</button>
        </div>
      </form>
      <a href="/jobs">All Jobs</a>
    </div>
  </div>
</div>
